{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": false
  },
  "parser": "@typescript-eslint/parser", // "parser": "@typescript-eslint/parser", "@babel/eslint-parser"
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react-hooks"
  ],
  "extends": ["react-app" ,"airbnb", "plugin:react/recommended", "plugin:@typescript-eslint/recommended", "plugin:import/recommended"],
  "settings": {
    "import/resolver": {
      "alias": [
        ["@images", "./src/assets/images"]
      ]
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"]

  }
}
